<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd">
    <div id="main-content">
        <h2>${message:title}</h2>
        
        <t:if test="successMessage">
            <p class="success">${message:successMessageFirstPart} <a href="${urlAfterRegen}">${message:login-label}</a> ${message:successMessageSecondPart}</p>
        </t:if>
		
        <t:if test="errorMessage">
            <p class="error">${errorMessage}</p>
        </t:if>
        
        <t:if test="formBlock">
	        <t:form t:id="new_password_form">
	        	<t:errors/>
	    		<p class="mandatory">
	        		${message:mandatory-label}
	        	</p>
	            <fieldset>
	            	<legend>${message:legend-label}</legend>
	            	<p class="instructions">${message:instructions-label}</p>
					
		        	<p>
		                <t:label for="newPassword">${message:newPassword-label} *:</t:label>
		        		<t:passwordfield t:id="newPassword" t:value="newPassword" t:validate="required,maxlength=255" />
		        		
		        		<a href="#" title="${message:newPassword-help-label}">
		        			<img src="${context:static/images/pic_help.png}" class="picHelp" alt="${message:newPassword-help-label}"/>
		        		</a>
					</p>
					
					<p>
		                <t:label for="newPasswordConfirm">${message:newPasswordConfirm-label} *:</t:label>
		        		<t:passwordfield t:id="newPasswordConfirm" t:value="newPasswordConfirm" t:validate="required,maxlength=255" />
		        		
		        		<a href="#" title="${message:newPasswordConfirm-help-label}">
		        			<img src="${context:static/images/pic_help.png}" class="picHelp" alt="${message:newPasswordConfirm-help-label}"/>
		        		</a>
					</p>
							
					<div class="form-actions">
						<p>
							<t:submit t:id="submit" value="message:submit-label" />
						</p>
					</div>
					
	            </fieldset>
	        </t:form>
        </t:if>
	</div>
</html>