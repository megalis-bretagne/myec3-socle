<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_1_0.xsd" >
  		<t:form t:id="creation_application_form">
		  <div id="main-content">
				<h2>${message:pageTitle-label}</h2>
				
				<p class="intro">${message:abstract-label}</p>
				
			<div class="steps">
				<ol>
					<li id="step1" class="active">${message:step-application-label}</li>
					<li id="step2">${message:step-application-subscriptions-label}</li>
				</ol>
			</div>
			
			<t:if test="errorMessage">
				<p class="error">${errorMessage}</p>
			</t:if>
			
			<p t:banner="message:form-error"  t:type="errors" t:clientClass="errorDialogue"></p>
			
			<p class="mandatory">${message:mandatory-label}</p>
    
        	<fieldset>
        			<legend>${message:application-info-label}</legend>
		       	<p>
	                <t:label for="name">${message:name-label} *:</t:label>
	                <t:textfield t:id="name" t:value="application.name" t:validate="required, maxlength=255"/>
	            </p>
		       	<p>
	                <t:label for="label">${message:label-label} *:</t:label>
	                <t:textfield t:id="label" t:value="application.label" t:validate="required, maxlength=255"/>
	            </p>
	            <p>
	                <t:label for="url">${message:url-label} *:</t:label>
	                <t:textfield t:id="url" t:value="application.url" t:validate="required, maxlength=255"/>
	            </p>
	            <p>
                    <t:label for="url">${message:picto-url} :</t:label>
                    <t:textfield t:id="pictourl" t:value="application.pictoUrl" t:validate="maxlength=255"/>
                </p>
                 <p>
                    <t:label for="url">${message:description} :</t:label>
                    <t:textfield t:id="description" t:value="application.description" t:validate="maxlength=255"/>
                </p>
	            <p>
	                <t:label for="structureTypeValue">${message:structureType-subscription-label} :</t:label>
	                <t:select  t:id="structureTypeValue" t:value="structureTypeValueSelected" t:blankLabel="TOUS" zone="defaultZone"/>	
	        		<a href="#" title="${message:structureTypeSubscription-help}">
	        			<img src="${context:static/images/pic_help.png}" class="picHelp" alt="${message:help-label}"/>
	        		</a>
				</p>
			
			<div class="form-actions">
						<p>
							<t:submit t:id="submit" class="button btnOk" value="message:next-label" />
							<input type="reset" value="${message:reset-label}" id="cancelButton" />
						</p>
			</div>
			</fieldset>
        </div>
     </t:form>
</html>