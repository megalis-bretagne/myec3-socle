<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                        http://www.springframework.org/schema/context
                        http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:annotation-config />
    <context:component-scan base-package="org.myec3.socle.core" />
    <context:component-scan base-package="org.myec3.socle.webapp.batch" />

    <bean id="pwdExpirationNotificationJob"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="PasswordExpirationNotification" />
        <property name="targetMethod" value="launchNotification" />
        <property name="arguments">
            <!-- Number of days before expiration -->
            <list>
                <value>20</value>
                <value>10</value>
                <value>1</value>
                <value>0</value>
            </list>
        </property>
    </bean>

    <bean id="pwdExpirationNotificationTrigger" class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="pwdExpirationNotificationJob" />
        <!-- format <Seconds Minutes Hours Day-of-Month Month Day-of-Week Year
            (optional field)> Everyday @ 01:00 -->
        <!-- Test dÃ©clanchement toutes les 5 minutes -->
        <property name="cronExpression" value="0 0/5 0 ? * *"  />
    </bean>

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <ref bean="pwdExpirationNotificationTrigger" />
            </list>
        </property>
    </bean>

</beans>
